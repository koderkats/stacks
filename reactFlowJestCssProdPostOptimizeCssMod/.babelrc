{
  "presets": [
    [
      "env",
      {
        "loose": true,
        "modules": false,
        "targets": {
          "browsers": "last 2 chrome versions"
        }
      }
    ],
    "@babel/env",
    "@babel/react",
    "@babel/preset-flow"
  ],
  "plugins": [
    "react-hot-loader/babel",
    ["transform-class-properties", { "loose": true }]
  ]
}